[user]
  name = <%= @user[:fullname] %>
  email = <%= @user[:email] %>

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  up = pull --rebase
  put = push origin HEAD
  ds = diff --staged
  amend = commit --amend -C HEAD
  undo = reset --soft HEAD^
  ls = log --pretty=format':%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short
  graph = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'

  url =! bash -c 'git config --get remote.origin.url | sed -E "s/.+:\\(.+\\)\\.git$/https:\\\\/\\\\/git\\\\.undev\\\\.cc\\\\/\\\\1/g"'

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input

[apply]
  whitespace = nowarn

[merge]
  tool = vimdiff

[mergetool]
  keepBackup = false
  prompt = false

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[help]
  autocorrect = 1

[init]
  templatedir = ~/.git_template

