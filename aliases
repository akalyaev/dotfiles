# Unix
alias mkdir='mkdir -p'

# Vagrant
alias vst="vagrant status"
alias vup="vagrant up"
alias vpr="vagrant provision"
alias vhl="vagrant halt"
alias vre="vagrant reload"
alias vssh="vagrant ssh"

# vim
alias v="vim"

# Bundler
alias b="bundle"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
